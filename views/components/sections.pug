mixin head(value = {})
  - let _class = typeof value != "string" ? value.class : "";

  .layer-header(class=_class)
    if typeof value == "string"
      h3.h4.layout-padding-dull--device-phone.layout-margin-dull--device-phone.style-center.style-font-20--device-phone.style-primary-dark.style-bold= value
    block

mixin main(value = {})
  - let _class = typeof value != "string" ? value.class : "style-font-14--device-phone";

  .layer-main(class=_class)
    if typeof value == "string"
      p.style-line-height-double--tablet.style-line-height-double--laptop.style-line-height-double--desktop= value
    block

mixin foot(value = {})
  - let _class = typeof value != "string" ? value.class : "style-font-14--device-phone";

  .layer-footer(class=_class)
    if typeof value == "string"
      span.style-bold= value
    block