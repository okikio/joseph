extends /app.pug

block pageInfo
  -
    let page = {
      websiteURL,
      url: "/sitemap",
      name: "sitemap",
      title: "Lets find you a destination, the destination of greatness!",
      description: "A little lost, here is a map, now where do you want to go?"
    };

block content
  //- Intro layer
  +layer({
    class: "layout-padding-horz-default--device-gt-tablet header-top-spot"
  })
    +layout({
      class: "layout-contain-small layout-shorten-vert"
    })
      section
        +head
          h1.h4.style-font-30--device-phone.style-primary-dark.style-bold.style-center The sitemap!
        +main
          ul
            //- Index
            li
              +link({
                href: "/",
                class: "style-italic style-underline layout-margin-right-mini",
                content: "Home"
              })
              +p("- Homepage galor, its the begining of our little adventure. Do you want to go back?")
              br

            //- About
            li
              +link({
                href: "/about-me",
                class: "style-italic style-underline layout-margin-right-mini",
                content: "About Me"
              })
              +p("- The story of me, myself and I. Shall we begin?")
              ul
                //- Resume
                li
                  +link({
                    href: "/my-resume",
                    class: "style-italic style-underline layout-margin-right-mini",
                    content: "My Resume"
                  })
                  +p("- All the qualifications I have aquired over my life time, in readable, bite sized, format.")

            //- Projects
            li
              +link({
                href: "/my-projects",
                class: "style-italic style-underline layout-margin-right-mini",
                content: "My Projects"
              })
              +p("- Hardwork and perseverance, hear all about it.")
              br
              ul
                //- Nasa
                li
                  +link({
                    href: "/projects/nasa",
                    class: "style-italic style-underline layout-margin-right-mini",
                    content: "Nasa"
                  })
                  +p("- Yes that Nasa, find out more.")
                  br
                //- Google Designs
                li
                  +link({
                    href: "/projects/google-designs",
                    class: "style-italic style-underline layout-margin-right-mini",
                    content: "Google Designs"
                  })
                  +p("- I Also worked with Google, specifically their Design team.")
                  br

            //- Contact
            li
              +link({
                href: "/contact-me",
                class: "style-italic style-underline layout-margin-right-mini",
                content: "Contact Me"
              })
              +p("- Do you have a project that demands perservance and passion? Then, lets talk.")
              br