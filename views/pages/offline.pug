extends /app.pug

block pageInfo
  -
    let page = {
      websiteURL,
      url: "/offline",
      name: "offline",
      title: "Yikes you're offline!",
      description: "Psshhh, psshhh, you are cutting off, psshhh. You are currently offline. Reload the page or try again later."
    };

block preload
  link(rel="preload" href="/fonts/montserrat--bold_latin.woff2" as="font" type="font/woff2" crossorigin)

block content
  section(id="content" itemtype="http://schema.org/WebPageElement" itemscope itemprop="mainEntity")
    //- Intro layer
    +layer({
      class: "layout-padding-horz-default"
    })
      +layout({
        class: "layout-contain-small layout-vert-centered-box"
      })
        section
          +head
            h1.h4.style-font-30--device-phone.style-primary-dark.style-bold.style-center Yikes you're offline!
          +main({
            class: "style-center",
          })
            +p("Psshhh, psshhh, you are cutting off, psshhh. You are currently offline. Reload the page or try again later.")

block footer
  +footer({
    class: "footer-stuck layout-margin-vert-top"
  })
