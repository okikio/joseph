doctype html
html(lang="en" itemscope="" itemtype="https://schema.org/WebPage")
  head
    include /components/sections.pug
    include /components/layout.pug
    include /components/banner.pug
    include /components/column.pug
    include /components/navbar.pug
    include /components/footer.pug
    include /components/image.pug
    include /components/layer.pug
    include /components/text.pug
    include /components/tile.pug
    include /components/hero.pug
    include /components/link.pug
    include /components/seo.pug
    include /components/row.pug

    -
      let defaults = {
        url: "/",
        websiteURL,
        name: "index",
        title: "Joseph Ojo â€” Mechatronics Engineer / Portfolio",
        description: "I'm Joseph Ojo, a skilled Mechatronics Engineer based in Oshawa, Canada. Experienced with multiple forms of technology, and an alumni of Ontario Tech."
      };

    block pageInfo
      -
        let page = Object.assign({}, defaults);

    link(rel="preconnect" href='https://res.cloudinary.com/' crossorigin)
    link(rel="dns-prefetch" href='https://res.cloudinary.com/' crossorigin)

    link(rel="preconnect" href=websiteURL crossorigin)
    link(rel="dns-prefetch" href=websiteURL crossorigin)

    if !dev && !githubPages
      link(rel="preconnect" href="https://d33wubrfki0l68.cloudfront.net/" crossorigin)
      link(rel="dns-prefetch" href="https://d33wubrfki0l68.cloudfront.net/" crossorigin)

    meta(charset="utf-8")
    meta(http-equiv="Accept-CH" content="DPR, Viewport-Width, Width")
    meta(http-equiv="Content-Type", content="text/html; charset=utf-8")
    //- if !dev && githubPages
    //-   base(href="/joseph/")

    script(type="application/ld+json").
      {
        "@context": "https://schema.org",
        "@graph": [
          {
            "@type": "Person",
            "@id": "#{page.websiteURL}/#person",
            "name": "Joseph Ojo",
            "url": "#{page.websiteURL}",
            "sameAs": [
              "https://www.linkedin.com/in/o-josephojo/",
              "https://github.com/laoluojo",
              "https://www.f6s.com/olaoluwajosephojo"
            ],
            "description": "#{defaults.description}",
            "logo": {
              "@type": "ImageObject",
              "@id": "#{page.websiteURL}/#logo",
              "url": "#{page.websiteURL}/favicon/android-chrome-512x512.png",
              "width": 512,
              "height": 512,
              "caption": "Joseph Ojo's Logo"
            },
            "image": {
              "@id": "#{page.websiteURL}/#logo"
            }
          },
          {
            "@type": "WebSite",
            "@id": "#{page.websiteURL}/#website",
            "url": "#{page.websiteURL}",
            "description": "#{defaults.description}",
            "sameAs": [
              "https://www.linkedin.com/in/o-josephojo/",
              "https://github.com/laoluojo",
              "https://www.f6s.com/olaoluwajosephojo"
            ],
            "name": "Joseph Ojo",
            "publisher": {
              "@id": "#{page.websiteURL}/#person"
            }
          },
          {
            "@type": "WebPage",
            "@id": "#{page.websiteURL}/#webpage",
            "url": "#{page.websiteURL}",
            "description": "#{page.description}",
            "inLanguage": "en-US",
            "name": "#{page.title}",
            "isPartOf": {
              "@id": "#{page.websiteURL}/#website"
            },
            "about": {
              "@id": "#{page.websiteURL}/#person"
            }
          }
        ]
      }

    //- if dev
      meta(http-equiv="Content-Security-Policy" content="default-src 'self'; font-src 'self' data: https:; style-src 'self' 'unsafe-inline'; img-src data: 'self' https://res.cloudinary.com/ https://josephojo.com; script-src 'self' https://res.cloudinary.com/ https://polyfill.io/ 'unsafe-inline' 'unsafe-eval'; connect-src 'self'; block-all-mixed-content; upgrade-insecure-requests; base-uri 'self'; object-src 'none'; worker-src 'self'; manifest-src 'self'; media-src 'self' https://res.cloudinary.com/; form-action 'self'; frame-ancestors 'self';")
