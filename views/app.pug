    meta(name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=5.0, user-scalable=yes")
    meta(name="keywords" content="Joseph Ojo, josephojo, josephojo.com, joseph, ojo, portfolio, engineer, web, mechatronics, mech, robots, UOIT, OntarioTech, tech, website, netlify, resume, projects, contact, about, oshawa, ontario, canada")

    meta(property="og:type" content="website")
    //- meta(name="twitter:site", content="@jo-ojo")
    meta(property="article:author" content="Joseph Ojo")
    meta(property="og:site_name" content=websiteURL.replace("https://", ""))
    meta(itemprop="image" content=`${websiteURL}/favicon/android-chrome-512x512.png`)
